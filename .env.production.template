# .env.production.template
# ============================================
# PantyPost Production Environment Template
# ============================================
# Set these in your production environment
# (Vercel, AWS, etc.)
# ============================================

# Application Configuration
# -------------------------
NEXT_PUBLIC_APP_NAME=PantyPost
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://pantypost.com

# API Configuration
# -----------------
NEXT_PUBLIC_API_BASE_URL=https://api.pantypost.com
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_USE_MOCK_API=false  # Must be false in production

# Cloudinary Configuration (Required for image uploads)
# ----------------------------------------------------
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=pantypost-prod
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=pantypost-secure
NEXT_PUBLIC_CLOUDINARY_API_KEY=your_production_api_key

# Analytics & Monitoring (REQUIRED for production)
# ------------------------------------------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX  # Replace with real GA4 ID
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx  # Replace with real Sentry DSN
NEXT_PUBLIC_ENABLE_ANALYTICS=true  # Must be true in production
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true  # Must be true in production
NEXT_PUBLIC_ANALYTICS_ENDPOINT=  # Optional: Custom analytics endpoint
NEXT_PUBLIC_ERROR_TRACKING_ENDPOINT=  # Optional: Custom error tracking endpoint

# Feature Flags
# -------------
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true
NEXT_PUBLIC_ENABLE_RATE_LIMITING=true
NEXT_PUBLIC_ENABLE_CACHE=true

# WebSocket Configuration
# -----------------------
NEXT_PUBLIC_WS_URL=wss://api.pantypost.com  # Must use wss:// in production
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=5

# Mock API Configuration (Production - all disabled)
# --------------------------------------------------
NEXT_PUBLIC_MOCK_SCENARIO=REALISTIC
NEXT_PUBLIC_MOCK_LOG_REQUESTS=false  # Must be false in production
NEXT_PUBLIC_MOCK_PERSIST_STATE=false  # Must be false in production
NEXT_PUBLIC_MOCK_SEED_DATA=false  # Must be false in production

# Cache Configuration
# -------------------
NEXT_PUBLIC_CACHE_TTL_SECONDS=300  # 5 minutes default

# API Feature Toggles (all enabled in production)
# -----------------------------------------------
NEXT_PUBLIC_USE_API_AUTH=true
NEXT_PUBLIC_USE_API_LISTINGS=true
NEXT_PUBLIC_USE_API_ORDERS=true
NEXT_PUBLIC_USE_API_MESSAGES=true
NEXT_PUBLIC_USE_API_WALLET=true
NEXT_PUBLIC_USE_API_USERS=true

# Development Tools
# -----------------
NEXT_PUBLIC_SHOW_DEVTOOLS=false  # Must be false in production
ANALYZE=false  # Set to true only when analyzing bundle size
