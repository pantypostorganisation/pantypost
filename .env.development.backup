# .env.development

# ðŸ”§ CRITICAL FIX: Use localhost:5000 WITHOUT /api suffix
# The API config will add /api automatically
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Development Environment Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application Info
NEXT_PUBLIC_APP_NAME=PantyPost
NEXT_PUBLIC_APP_VERSION=1.0.0

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# ðŸ”§ ENABLE ALL API FEATURES FOR BACKEND INTEGRATION
NEXT_PUBLIC_USE_API_AUTH=true
NEXT_PUBLIC_USE_API_LISTINGS=true
NEXT_PUBLIC_USE_API_ORDERS=true
NEXT_PUBLIC_USE_API_MESSAGES=true
NEXT_PUBLIC_USE_API_WALLET=true
NEXT_PUBLIC_USE_API_USERS=true

# ðŸ”§ DISABLE MOCK API - Use real backend only
NEXT_PUBLIC_USE_MOCK_API=false

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:5000
NEXT_PUBLIC_WEBSOCKET_ENABLED=false

# Enable all features in development
NEXT_PUBLIC_ENABLE_SUBSCRIPTIONS=true
NEXT_PUBLIC_ENABLE_AUCTIONS=true
NEXT_PUBLIC_ENABLE_CUSTOM_REQUESTS=true
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true
NEXT_PUBLIC_ENABLE_SELLER_VERIFICATION=true

# Disable security features for easier development
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=false
NEXT_PUBLIC_ENABLE_RATE_LIMITING=false

# Disable external services in development
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_REALTIME=false

# Cloudinary (add your credentials when ready)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=
NEXT_PUBLIC_CLOUDINARY_API_KEY=

# Session Configuration
NEXT_PUBLIC_SESSION_DURATION=86400000

NEXT_PUBLIC_API_BASE_URL=https://api.pantypost.com/api
