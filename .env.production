# .env.production

# Production Environment Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://pantypost.com

# Application Info
NEXT_PUBLIC_APP_NAME=PantyPost
NEXT_PUBLIC_APP_VERSION=1.0.0

# Cloudinary Configuration
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# Production API Configuration
NEXT_PUBLIC_USE_MOCK_API=false
NEXT_PUBLIC_API_BASE_URL=https://api.pantypost.com
NEXT_PUBLIC_API_URL=https://api.pantypost.com/api

# All features use real API
NEXT_PUBLIC_USE_API_AUTH=true
NEXT_PUBLIC_USE_API_LISTINGS=true
NEXT_PUBLIC_USE_API_ORDERS=true
NEXT_PUBLIC_USE_API_MESSAGES=true
NEXT_PUBLIC_USE_API_WALLET=true
NEXT_PUBLIC_USE_API_USERS=true

# Production security
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true
NEXT_PUBLIC_ENABLE_RATE_LIMITING=true
NEXT_PUBLIC_MAX_REQUESTS_PER_MINUTE=30

# Production monitoring (disable for now if not set up)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_SENTRY_DSN=

# Production WebSocket
NEXT_PUBLIC_WS_URL=wss://api.pantypost.com
NEXT_PUBLIC_WEBSOCKET_URL=wss://api.pantypost.com
NEXT_PUBLIC_WEBSOCKET_ENABLED=true
NEXT_PUBLIC_ENABLE_REALTIME=true

# Production limits
NEXT_PUBLIC_MAX_FILE_SIZE_MB=50
NEXT_PUBLIC_CACHE_TTL_SECONDS=600

NOWPAYMENTS_API_KEY=your_real_nowpayments_api_key_here
