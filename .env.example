# .env.example

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=PantyPost
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000/api
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# Feature Flags
NEXT_PUBLIC_USE_MOCK_API=true
NEXT_PUBLIC_USE_API_AUTH=false
NEXT_PUBLIC_USE_API_LISTINGS=false
NEXT_PUBLIC_USE_API_ORDERS=false
NEXT_PUBLIC_USE_API_MESSAGES=false
NEXT_PUBLIC_USE_API_WALLET=false
NEXT_PUBLIC_USE_API_USERS=false

# Mock API Configuration
NEXT_PUBLIC_MOCK_SCENARIO=REALISTIC
NEXT_PUBLIC_MOCK_LOG_REQUESTS=true
NEXT_PUBLIC_MOCK_PERSIST_STATE=true
NEXT_PUBLIC_MOCK_SEED_DATA=true

# Cloudinary Configuration
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset
NEXT_PUBLIC_CLOUDINARY_API_KEY=your_api_key

# Security
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true
NEXT_PUBLIC_ENABLE_RATE_LIMITING=true
NEXT_PUBLIC_MAX_REQUESTS_PER_MINUTE=60

# Analytics (for future use)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Monitoring (for future use)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# Feature Toggles
NEXT_PUBLIC_ENABLE_SUBSCRIPTIONS=true
NEXT_PUBLIC_ENABLE_AUCTIONS=true
NEXT_PUBLIC_ENABLE_CUSTOM_REQUESTS=true
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true
NEXT_PUBLIC_ENABLE_SELLER_VERIFICATION=true

# Limits and Constraints
NEXT_PUBLIC_MAX_LISTING_IMAGES=10
NEXT_PUBLIC_MAX_GALLERY_IMAGES=20
NEXT_PUBLIC_MAX_MESSAGE_LENGTH=1000
NEXT_PUBLIC_MAX_FILE_SIZE_MB=10
NEXT_PUBLIC_MIN_WITHDRAWAL_AMOUNT=20
NEXT_PUBLIC_PLATFORM_FEE_PERCENTAGE=10

# WebSocket Configuration (for future socket.io integration)
NEXT_PUBLIC_WS_URL=ws://localhost:5000
NEXT_PUBLIC_WS_PATH=/socket.io
NEXT_PUBLIC_ENABLE_REALTIME=false

# Cache Configuration
NEXT_PUBLIC_CACHE_TTL_SECONDS=300
NEXT_PUBLIC_ENABLE_CACHE=true