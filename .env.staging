# .env.staging

# Staging Environment Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://staging.pantypost.com

# Application Info
NEXT_PUBLIC_APP_NAME=PantyPost
NEXT_PUBLIC_APP_VERSION=1.0.0

# Cloudinary Configuration
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# Use real API in staging
NEXT_PUBLIC_USE_MOCK_API=false
NEXT_PUBLIC_API_BASE_URL=https://api.pantypost.com/api

# Feature flags for gradual rollout
NEXT_PUBLIC_USE_API_AUTH=true
NEXT_PUBLIC_USE_API_LISTINGS=true
NEXT_PUBLIC_USE_API_ORDERS=true
NEXT_PUBLIC_USE_API_MESSAGES=false
NEXT_PUBLIC_USE_API_WALLET=true
NEXT_PUBLIC_USE_API_USERS=true

# Enable security in staging
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true
NEXT_PUBLIC_ENABLE_RATE_LIMITING=true

# Enable monitoring in staging
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_SENTRY_DSN=your_staging_sentry_dsn

# Test WebSocket in staging
NEXT_PUBLIC_WS_URL=wss://staging.pantypost.com
NEXT_PUBLIC_ENABLE_REALTIME=true