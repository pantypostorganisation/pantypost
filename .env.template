# .env.template
# ============================================
# PantyPost Environment Variables Template
# ============================================
# Copy this file to .env.local for development
# or set these in your production environment
# ============================================

# Application Configuration
# -------------------------
NEXT_PUBLIC_APP_NAME=PantyPost
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Change to https://pantypost.com in production

# API Configuration
# -----------------
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
# Change to https://api.pantypost.com in production
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_USE_MOCK_API=false
# Set to false when real backend is ready

# Cloudinary Configuration (Required for image uploads)
# ----------------------------------------------------
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset
NEXT_PUBLIC_CLOUDINARY_API_KEY=your_api_key

# Analytics & Monitoring
# ----------------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# Google Analytics 4 ID
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
# Sentry error tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=false
# Set to true in production
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false
# Set to true in production
NEXT_PUBLIC_ANALYTICS_ENDPOINT=
# Optional: Custom analytics endpoint
NEXT_PUBLIC_ERROR_TRACKING_ENDPOINT=
# Optional: Custom error tracking endpoint

# Feature Flags
# -------------
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true
NEXT_PUBLIC_ENABLE_RATE_LIMITING=true
NEXT_PUBLIC_ENABLE_CACHE=true

# WebSocket Configuration
# -----------------------
NEXT_PUBLIC_WS_URL=ws://localhost:3001
# Change to wss://api.pantypost.com in production
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=5

# Mock API Configuration (Development)
# ------------------------------------
NEXT_PUBLIC_MOCK_SCENARIO=REALISTIC
# Options: REALISTIC, ERROR, SLOW, OFFLINE
NEXT_PUBLIC_MOCK_LOG_REQUESTS=true
NEXT_PUBLIC_MOCK_PERSIST_STATE=true
NEXT_PUBLIC_MOCK_SEED_DATA=true

# Cache Configuration
# -------------------
NEXT_PUBLIC_CACHE_TTL_SECONDS=300
# 5 minutes default

# API Feature Toggles (for gradual backend migration)
# ---------------------------------------------------
NEXT_PUBLIC_USE_API_AUTH=false
NEXT_PUBLIC_USE_API_LISTINGS=false
NEXT_PUBLIC_USE_API_ORDERS=false
NEXT_PUBLIC_USE_API_MESSAGES=false
NEXT_PUBLIC_USE_API_WALLET=false
NEXT_PUBLIC_USE_API_USERS=false

# Development Tools
# -----------------
NEXT_PUBLIC_SHOW_DEVTOOLS=true
# Hide in production
ANALYZE=false
# Set to true to analyze bundle size
