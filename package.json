{
  "name": "pantypost",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run build:clean && npm run build:next",
    "build:clean": "rimraf .next out",
    "build:next": "cross-env NODE_OPTIONS=--max-old-space-size=8192 next build && npm run postbuild",
    "start": "next start",
    "lint": "next lint",
    "postbuild": "npm run generate-sitemap && npm run generate-icons",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "generate-icons": "node scripts/generate-icons.js",
    "analyze": "cross-env ANALYZE=true npm run build",
    "lighthouse": "lighthouse https://localhost:3000 --view",
    "lighthouse:ci": "lighthouse https://localhost:3000 --output json --output-path ./lighthouse-report.json",
    "test:a11y": "pa11y-ci --sitemap https://localhost:3000/sitemap.xml",
    "check-env": "node scripts/validate-env.js",
    "build:staging": "cross-env NODE_ENV=staging npm run build",
    "build:production": "cross-env NODE_ENV=production npm run build",
    "deploy:staging": "npm run build:staging && echo Ready for staging deployment",
    "deploy:production": "npm run build:production && echo Ready for production deployment",
    "env:validate": "node scripts/validate-env.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:errors": "jest tests/error-scenarios.test.tsx --verbose",
    "test:errors:watch": "jest tests/error-scenarios.test.tsx --watch",
    "preflight": "npm run lint && npm run test:ci && npm run check-env",
    "production:check": "npm run preflight && npm run build:production && npm run lighthouse:ci"
  },
  "dependencies": {
    "@sentry/nextjs": "^8.55.0",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/crypto-js": "^4.2.2",
    "canvas-confetti": "^1.9.3",
    "chart.js": "^4.5.0",
    "critters": "^0.0.23",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.19.1",
    "lucide-react": "^0.487.0",
    "mongoose": "^8.17.0",
    "next": "^15.4.0-canary.37",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "recharts": "^3.1.2",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0",
    "web-vitals": "^5.0.3",
    "zod": "^3.25.75"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/canvas-confetti": "^1.6.4",
    "@types/chart.js": "^2.9.41",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "globby": "^14.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-watch-typeahead": "^3.0.1",
    "lighthouse": "^12.8.0",
    "msw": "^2.10.4",
    "pa11y-ci": "^4.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.0",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
